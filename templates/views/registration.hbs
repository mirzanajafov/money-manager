{{>header}}
<div class="flex items-center min-h-screen p-4 bg-gray-100 lg:justify-center">
      <div
        class="flex flex-col overflow-hidden bg-white rounded-md shadow-lg max md:flex-row md:flex-1 lg:max-w-screen-md"
      >
        <div
          class="p-4 py-6 text-white bg-blue-500 md:w-80 md:flex-shrink-0 md:flex md:flex-col md:items-center md:justify-evenly"
        >
          <div class="my-3 text-4xl font-bold tracking-wider text-center">
            <a href="#">MN-MM</a>
          </div>
          <p class="mt-6 font-normal text-center text-gray-300 md:mt-0">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean blandit non libero quis consectetur. Praesent pellentesque!
          </p>
          <p class="flex flex-col items-center justify-center mt-10 text-center">
            <span>Have an account?</span>
            <a href="/login" class="underline">Login!</a>
          </p>
          <p class="mt-6 text-sm text-center text-gray-300">
            Read our <a href="#" class="underline">terms</a> and <a href="#" class="underline">conditions</a>
          </p>
        </div>
        <div class="p-5 bg-white md:flex-1">
          <h3 class="my-4 text-2xl font-semibold text-gray-700">Registration</h3>
          <form action="#" class="flex flex-col space-y-5" id="registrationForm">
            <div class="flex flex-col space-y-1">
              <label for="email" class="text-sm font-semibold text-gray-500">Email address  <span class="text-red-500">&nbsp;*</span></label>
              <input
                type="email"
                id="regEmail"
                 data-required="true"
                 data-validateas="email"
                 data-label="E-mail"
                class="px-4 py-2 transition duration-300 border border-gray-300 rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200"
              />
               <strong class="text-red-500 text-xs italic error-msg"></strong>
            </div>
            <div class="flex flex-col space-y-1">
              <label for="regFname" class="text-sm font-semibold text-gray-500">First Name  <span class="text-red-500">*</span></label>
              <input
                type="text"
                id="regFname"
                data-required="true"
                data-validateas="text"
                data-label="First Name"
                class=" px-4 py-2 transition duration-300 border border-gray-300 rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200"
              />
                <strong class="text-red-500 text-xs italic error-msg"></strong>
            </div>
               <div class="flex flex-col space-y-1">
              <label for="regLname" class="text-sm font-semibold text-gray-500">Last Name  <span class="text-red-500">*</span></label>
              <input
                type="text"
                id="regLname"
                data-required="true"
                data-validateas="text"
                data-label="Last Name"
                class="px-4 py-2 transition duration-300 border border-gray-300 rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200"
              />
               <strong class="text-red-500 text-xs italic error-msg"></strong>
            </div>
            <div class="flex flex-col space-y-1">
                <label for="regPassword" class="text-sm font-semibold text-gray-500">Password  <span class="text-red-500">*</span></label>  
              <input
                type="password"
                id="regPassword"
                data-required="true"
                data-validateas="password"
                data-label="password"
                class="px-4 py-2 transition duration-300 border border-gray-300 rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200"
              />
               <strong class="text-red-500 text-xs italic error-msg"></strong>
            </div>
          
            <div>
              <button
              id="regButton"
                type="button"
                class="w-full px-4 py-2 text-lg font-semibold text-white transition-colors duration-300 bg-blue-500 rounded-md shadow hover:bg-blue-600 focus:outline-none focus:ring-blue-200 focus:ring-4"
              >
               Register
              </button>
            </div>
       
          </form>
        </div>
      </div>
    </div>

    {{>footer}}